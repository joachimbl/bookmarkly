<%= form_for(@link) do |f| %>
  <% if @link.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@link.errors.count, "error") %> prohibited this url from being saved:</h2>

      <ul>
      <% @link.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <form class="form-horizontal">
    <div class="form-group">
      <%= f.label :url %><br />
      <%= f.text_field :url, class: "form-control input-lg", placeholder: "http://" %>
    </div>

    <div class="form-group">
      <%= f.label :tag_list %><br />
      <%= f.collection_select :tag_ids, ActsAsTaggableOn::Tag.all, :id, :name, {}, class: "form-control input-lg", multiple: true, data: { input: 'chosen' } %>
    </div>

    <div class="form-group">
      <%= f.submit "GO", class: "btn btn-success btn-lg col-sm-2" %>
    </div>
  </form>

<% end %>
