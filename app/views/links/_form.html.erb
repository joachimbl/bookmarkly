      <h2><%= pluralize(@link.errors.count, "error") %> prohibited this url from being saved:</h2>

      <ul>
      <% @link.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <form class="form-horizontal">
    <div class="form-group form-group">
      <div class="col-sm-10">
