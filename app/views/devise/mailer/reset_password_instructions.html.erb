<link href='http://fonts.googleapis.com/css?family=Hind:400,700' rel='stylesheet' type='text/css'>

<table width="100%" border="0" cellspacing="0" cellpadding="20px" style="background-color:#ecf0f1;">
  <tbody>
    <tr>
      <td style="background-color: #27ae60; ">
        <table width="620" border="0" align="center" cellpadding="0" cellspacing="0">
          <tbody>
            <tr>
              <td width="476" height="20" valign="top"></td>
            </tr>
            <tr>
              <td align="left">
                <%= link_to "http://www.browzery.com" do %>
                  <img src="http://www.browzery.com/assets/browzery-white-0de9c9c8c7aba37b4f4b3d0e4e47e2d4.png" title: "logo" width: "270px" >
                <% end %>
              </td>
              <td valign="left" style="color: #ffffff;">
                <h2>Hello <%= @resource.email %>!</h2>
              </td>

            </tr>
          </tbody>
        </table>
      </td>
    </tr>
    <tr>
      <td>

        <table width="620" border="0" align="center" cellpadding="0" cellspacing="0">
          <tbody>
            <tr>
              <td style="background-color: #ffffff; border-radius: 2px; -moz-border-radius: 2px; -webkit-border-radius: 2px; -khtml-border-radius: 2px;">
                <table width="100%" border="0" cellspacing="0" cellpadding="20">
                  <tbody>
                    <tr>
                      <td valign="top" width="100%">
                        <p>Someone has requested a link to change your password. You can do this through the link below.</p>

                        <p><%= link_to 'Change my password', edit_password_url(@resource, reset_password_token: @token) %></p>

                        <p>If you didn't request this, please ignore this email.</p>
                        <p>Your password won't change until you access the link above and create a new one.</p>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </td>
            </tr>
            <tr>
              <td height="40">&nbsp;</td>
            </tr>
          </tbody>
        </table>

      </td>
    </tr>

  </tbody>
</table>
