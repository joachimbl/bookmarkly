<% if controller_name != 'sessions' %>
  <%= link_to 'Sign in', new_session_path(resource_name), class: "btn btn-default pull-right" %>
  <small class="pull-right gutter-right gutter-top">Already have an account? </small>
<% end -%>

<% if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to 'Sign up', new_registration_path(resource_name), class: "btn btn-default pull-right"  %>
  <small class="pull-right gutter-right gutter-top">No profile? </small>
<% end -%>
