<div class="container-fluid header">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= link_to root_url do %>
          <%= image_tag ('browzery-white.png'), class: "img-responsive gt-vrt-lg logo", title: "logo" %>
        <% end %>
      </div>
      <div class="col-md-9">
        <% if user_signed_in? %>

          <%= form_for Link.new do |f| %>
            <form class="form-horizontal">
              <div class="input-group input-group-lg">
                <%= f.text_field :url, class: "form-control input-lg", placeholder: "http://" %>
                <span class="input-group-btn">
                  <%= f.submit "GO", class: "btn btn-primary btn-lg" %>
                </span>
              </div>
              <span class="help-block">Insert links to articles, blogposts, images, videos etc</span>
            </form>
          <% end %>

        <% else %>

          <div class="pull-right gt-top">
            <%= link_to 'Sign in', new_user_session_path, class: 'btn btn-primary' %>

            <%= link_to 'Sign up now', new_user_registration_path, class: 'btn btn-default gt-left' %>
          </div>

        <% end %>

        <%#= render "urls/form" action: 'new' %>
      </div>
    </div>
  </div>
</div>
