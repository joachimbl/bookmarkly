<div class="row">
  <%= content_tag :div, class: (comment.root? ? 'col-xs-12' : 'col-xs-offset-1 col-xs-11') do %>
    <div><%= comment.body %></div>
    <%= link_to 'reply', '#', data: { comment: 'reply' } %>
    <%= comment.user.username %>
    <%= content_tag :div, class: 'hidden', data: { comment: 'form' } do %>
      <%= render 'comments/form', comment: comment %>
    <% end %>

    <%= render comment.children %>
  <% end %>
</div>
